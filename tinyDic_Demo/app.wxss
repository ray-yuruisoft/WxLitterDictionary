@import 'style/weui.wxss';
@import 'style/Font.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family:  -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}


.icon {
  font-family: 'FontAwesome';
}

.icon-book {
  font-size: 40rpx;
}

.icon-book:after {
  content: '\f02d';
  color: palevioletred;
}

.icon-edit{
  font-size: 40rpx;
}
.icon-edit::after{
  content: '\f013';
  color: palevioletred;
}

.icon-phone{
  font-size: 30rpx;
}
.icon-phone::before{
  content: '\f095';
  color: gray;
}

.icon-mobile-phone{
  font-size: 30rpx;
}
.icon-mobile-phone::before{
  content: '\f10b';
  color: gray;
}